{
    "name": "n2-rede-social-blog",
    "version": "1.0.0",
    "description": "Projeto N2 e N3 - Testes com Mocha, Chai, Sinon, Playwright e Artillery",
    "main": "server.js",
    "scripts": {
        "test": "mocha test/**/*.test.js",
        "start": "node server.js",
        "dev": "nodemon server.js",
        "test:ui": "playwright test",
        "test:ui:headed": "playwright test --headed",
        "test:ui:debug": "playwright test --debug",
        "test:ui:report": "playwright show-report",
        "test:load": "artillery run load-tests/scenario.yml",
        "test:load:report": "artillery run --output load-tests/report.json load-tests/scenario.yml && artillery report load-tests/report.json --output load-tests/report.html",
        "test:all": "npm run test && npm run test:ui && npm run test:load"
    },
    "keywords": [
        "testing",
        "mocha",
        "chai",
        "sinon",
        "playwright",
        "artillery",
        "ui-tests",
        "load-tests"
    ],
    "author": "Gustavo",
    "license": "ISC",
    "dependencies": {
        "axios": "^1.6.0",
        "express": "^4.18.2",
        "cors": "^2.8.5"
    },
    "devDependencies": {
        "@playwright/test": "^1.56.1",
        "artillery": "^2.0.0",
        "chai": "^4.3.10",
        "chai-http": "^4.4.0",
        "mocha": "^10.2.0",
        "sinon": "^17.0.1",
        "nodemon": "^3.0.2"
    }
}